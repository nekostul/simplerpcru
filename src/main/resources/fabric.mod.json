{
    "schemaVersion": 1,
    "id": "simplerpcru",
    "version": "${version}",

    "name": "Simple RPC (RU)",
    "description": "A simple Discord RPC plugin for modpacks\n\n    -- RU --\n\n    Простой Discord RPC плагин для модпаков.\n    Русифицированный форк оригинального simplerpc.",
    "authors": [
      "HypherionMC (original mod), nekostul (RU fork)"
    ],
    "contact": {
      "homepage": "https://www.curseforge.com/minecraft/mc-mods/simple-discord-rpc",
      "issues": "https://github.com/firstdarkdev/simple-rpc/issues",
      "discord": "https://discord.firstdark.dev"
    },

    "license": "MIT",
    "icon": "assets/simplerpc/icon.png",

    "environment": "*",
    "entrypoints": {
      "client": [
          "com.hypherionmc.simplerpc.loaders.fabric.SRPCFabricClient"
      ]
    },
    "mixins": [
      "simplerpc.fabric.mixins.json"
    ],

    "depends": {
      "fabricloader": ">=0.14.19",
      "fabric": "*",
      "minecraft": ">=1.18.2",
      "java": ">=17",
      "craterlib": ">=3.0.0"
    }
  }
